@model PropertyRentalManagement.Models.Building

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Apartment apartment = new Apartment();
}

<h1>Details</h1>

<div>
    <h4>Building</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BuildingCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuildingCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Province)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Province)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ManagerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ManagerId) - @Html.DisplayFor(model => model.Manager!.FirstName) @Html.DisplayFor(model => model.Manager!.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayFor(model => model.OwnerId) - @Html.DisplayFor(model => model.Owner.FirstName) @Html.DisplayFor(model => model.Owner.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
    </dl>
</div>
@if (Model.Apartments.Count > 0)
{
    <h3>Building's apartments detail:</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(_ => apartment.ApartmentCode)
            </th>
            <th>
                @Html.DisplayNameFor(_ => apartment.Description)
            </th>
            <th>
                @Html.DisplayNameFor(_ => apartment.Rent)
            </th>
            <th>
                @Html.DisplayNameFor(_ => apartment.Status)
            </th>
        </tr>
        @foreach (var item in Model.Apartments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApartmentCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
            </tr>
        }
    </table>
}
else
{
    <h3>No Apartment found in this building.</h3>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BuildingCode" class="btn btn-success">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
