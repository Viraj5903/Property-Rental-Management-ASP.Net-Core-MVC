
@{
    ViewData["Title"] = "Denied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <!-- Access Denied Icon and Message -->
                    <h2 class="text-danger">
                        <i class="bi bi-x-circle"></i> Access Denied
                    </h2>
                    <p class="lead text-muted">You do not have permission to view this page.</p>
                    @* <p class="mb-4">It looks like you are trying to access a restricted area. Please check your permissions or contact the administrator if you believe this is an error.</p> *@

                    <!-- Button to go back to the home page -->
                    <a href="@Url.Action("Index", "Home")" class="btn btn-danger btn-lg">
                        <i class="bi bi-house-door"></i> Go to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


