@model IEnumerable<PropertyRentalManagement.Models.Apartment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Apartment</a>
</p>
<table class="table list-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApartmentCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApartmentType.ApartmentTypeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building.BuildingCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApartmentCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApartmentType.ApartmentTypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Building.BuildingCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApartmentId" class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApartmentId" class="btn btn-info text-white">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApartmentId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
